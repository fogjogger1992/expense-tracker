<div class="container-fluid py-4">
  <h3 class="text-center pt-4" style="font-weight: 700; color: #1455ae;">請輸入您的支出</h3>
  <div class="row col-12 col-md-7 mx-auto px-1 my-4 py-4">

    <form class="row col-12" action="/records/{{ record._id }}?_method=PUT" method="POST">

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">名稱 *</span>
        </div>
        <input type="text" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" name="name" value="{{record.name}}" required>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">日期 *</span>
        </div>
        <input type="date" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" id="defaultDate" name="date" value="{{record.date}}" required>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">類別 *</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="Category" required>
          <option selected disabled>選擇...</option>
          <option value="家居物業/fas fa-home">家居物業</option>
          <option value="交通出行/fas fa-shuttle-van">交通出行</option>
          <option value="休閒娛樂/fas fa-grin-beam">休閒娛樂</option>
          <option value="餐飲食品/fas fa-utensils">餐飲食品</option>
          <option value="其他/fas fa-pen">其他</option>
        </select>
      </div>

      <div class="input-group mb-4">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">金額 *</span>
        </div>
        <input type="number" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" name="amount" min="1" value={{record.amount}} required>
      </div>

      <div class="col-12">
        <p style="font-size: 12px; color: #d14152;">* 必填欄位</p>
      </div>

      <input class="btn px-4 my-4 mx-auto" id="btn_submit" type="submit" value="儲存檔案">

    </form>
  </div>
</div>